{
    "name": "bromuro-api",
    "version": "1.0.0",
    "description": "Nestjs application providing jokes through a web Api",
    "main": "dist/main.js",
    "scripts": {
        "build": "rm -rf dist/ && nest build",
        "deploy": "npm run build && gcloud app deploy",
        "docker:build": "npm run build && docker build -t l3bowski/bromuro-api:latest .",
        "prettier:fix": "prettier --write \"./src/**/*.{ts,tsx}\"",
        "start": "node dist/main.js",
        "start:dev": "nest start --watch"
    },
    "author": "Carles Capellas <capellas.carles@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "^4.17.7",
        "@types/mongodb": "^3.5.26",
        "prettier": "^2.1.1",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "@nestjs/common": "^7.4.2",
        "@nestjs/core": "^7.4.2",
        "@nestjs/platform-express": "^7.4.2",
        "@nestjs/swagger": "^4.6.0",
        "dotenv": "^8.2.0",
        "mongodb": "^3.6.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.6.2",
        "swagger-ui-express": "^4.1.4"
    }
}
